<section class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="form-user">
          <div class="form-header">
            <h2 class="form-header-title">Log in</h2>
          </div>
          <div class="form-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "emil", class:"form-control",placeholder: "E-Mail" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class:"form-control",autocomplete: "current-password",placeholder:"Password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
            <% end %>
        </div>
        <div class="actions">
            <%= f.submit "Log in", class:"btn btn-block btn-base-1 mt-20"%>
          </div>
          </div>
        <% end %>

        <!-- <%= render "devise/shared/links" %> -->
      </div>
      
    </div>
    
  </div>
</section>


  

  

  

  
